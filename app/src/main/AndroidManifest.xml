<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buildrepo.shopmoodz">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".controller.AppController"
        android:allowBackup="true"
        android:icon="@drawable/oppex_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="Oppex" />
        <activity
            android:name=".activity.MyChat"
            android:label="My Chat" />
        <activity
            android:name=".activity.SubmitFreeAds"
            android:label="Submit a Free Ad" />
        <activity
            android:name=".activity.SelectCategory"
            android:label="Select category" />
        <activity android:name=".activity.ProductDetail" />
        <activity
            android:name=".activity.Gallery"
            android:label="Gallery" />
        <activity android:name=".activity.SelectCategoriesActivity" />
        <activity
            android:name=".activity.RateUs"
            android:label="Rate Us" />
        <activity
            android:name=".activity.SignUp"
            android:label="Register" />
        <activity
            android:name=".activity.TermsofUse"
            android:label="Rule" />
        <activity
            android:name=".activity.AboutUs"
            android:label="About Us" />
        <activity android:name=".activity.SearchActivity"></activity>
        <activity android:name=".activity.CartActivity"></activity>
    </application>

</manifest>
